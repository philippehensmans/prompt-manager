{
  "manifest_version": 3,
  "name": "Gestionnaire de Prompts Pro",
  "version": "1.0.0",
  "description": "Stockez et organisez vos prompts IA pour la communication, gestion de projet et blogging",
  
  "permissions": [
    "storage"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gestionnaire de Prompts",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}